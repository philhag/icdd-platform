@{
    ViewData["Title"] = Model.ErrorCode + " " + Model.ErrorTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IcddWebApp.PageModels.Error.ErrorPageModel;

<div class="container my-auto">
    <div class="alert-message alert-message-danger align-self-center">
        
        <h4>@Model.ErrorTitle
            @if (Model.ErrorCode >= 0)
            {
                <span class="float-end badge bg-danger">@Model.ErrorCode</span>
            }
            </h4>
        <p>
            @Model.ErrorMessage
        </p>
    </div>

    @if (Model.InnerException != null)
    {
        <div class="alert-message alert-message-info">
            <h4>@Model.InnerException.Source</h4>
            <p>
                @Model.InnerException.Message
            </p>
        </div>
    }
</div>