@using VDS.RDF
@using VDS.RDF.Nodes
@model IcddWebApp.PageModels.Container.PayloadTriplesPageModel
<div>
    <div class="p-3">
        <strong>Definition</strong><br />
        <div class="row g-0 mb-1">
            <div class="col-2">
                BaseUri:
            </div>
            <div class="col-10">
                <a href="@Model.PayloadTriples.BaseUri" target="_blank">@Model.PayloadTriples.BaseUri</a>
            </div>
        </div>

    </div>
    <div class="p-3">
        <strong>Namespaces</strong>
        @foreach (var prefix in Model.PayloadTriples.Namespaces.Prefixes)
        {
            <div class="row g-0">
                <div class="col-2">
                    @prefix
                </div>
                <div class="col-10">
                    <a href="@Model.PayloadTriples.Namespaces.GetNamespaceUri(prefix)" target="_blank">@Model.PayloadTriples.Namespaces.GetNamespaceUri(prefix)</a>
                </div>
            </div>
        }
    </div>
</div>

