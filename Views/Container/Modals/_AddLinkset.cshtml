@{
}
@model IcddWebApp.PageModels.Container.ContainerPageModel
<!-- Modal -->
<div class="modal" id="modalAddLinkset" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create a new Linkset</h5>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("CreateLinkset", "Container", FormMethod.Post))
            {
                <div class="modal-body">
                    @Html.Hidden("projId", Model.Project.Id)
                    @Html.Hidden("id", Model.ContainerMetadata.Id)
                    @Html.Hidden("containerVersion", Model.ContainerMetadata.Version)
                    <div class="input-group mb-3">
                        <span class="input-group-text required-asterisk" id="basic-addon1">Linkset Filename</span>
                        <input name="linkset" type="text" class="form-control" placeholder="Linkset Filename" aria-label="Linkset Filename" aria-describedby="basic-addon1" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="required-asterisk-before">Required Field</div>
                    <button type="button" class="btn btn-secondary rounded-0" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-rub-blue rounded-0">Create</button>
                </div>
            }
        </div>
    </div>
</div>